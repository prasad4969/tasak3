<html lang="en">
    <%- include('../partials/head.ejs')  %>
   
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Node.js Crash Course</title>
</head>
<body class="create" >
  
  
  <%- include('../partials/nav.ejs')  %>

  <div class="create-blog content flex-col style">
    <form action="/feed" method="POST"> 
      <h3>Create New Post</h3>
    <div>
      <label for="title">Title:</label>
      <input type="text" class="spice"  id="title" name="title" required>
    </div>
    <div>
      <label  for="about">Body:</label>
      <textarea  class="indigo"  id="about" name="body" required></textarea>
    </div> 
    <div>
      <label for="author">Author:</label>
      <input  class="spice"  type="text" id="author"  name="author" required>
    </div> 
    <div>
       <button class="submit">Submit</button>
      </div>   
    </form>
  </div>


  <%- include('../partials/footer.ejs')  %>
</body>
</html>